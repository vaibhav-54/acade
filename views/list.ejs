<body class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="red">
      <div class="logo">
        <a href="/" class="simple-text logo-normal">
          AcadE
        </a>
      </div>
      <div class="sidebar-wrapper" id="sidebar-wrapper">
        <ul class="nav">
          <li class="active">
            <a href=<%= "/createquiz"+link %>>
              <p>Create quiz</p>
            </a>
          </li>
          <li>
            <a href=<%= "/takequiz"+link %>>
              <p>Take quiz</p>
            </a>
          </li>
          <li>
            <a href=<%= "/createquizhistory"+link %>>
              <p>Create quiz history</p>
            </a>
          </li>
          <li>
            <a href=<%= "/createassignment"+link %>>
              <p>Create Assignment</p>
            </a>
          </li>
          <li>
            <a href=<%= "/takeassignment"+link %>>
              <p>Take Assignment</p>
            </a>
          </li>
          <li>
            <a href=<%= "/createassignmenthistory"+link %>>
              <p>Create Assignment History</p>
            </a>
          </li>
          <li>
            <a href=<%= "/user"+link %>>
              <p>User Profile</p>
            </a>
          </li>
          <li>
            <a href=<%= "/resources"+link %>>
              <p>Resources</p>
            </a>
          </li>
          <li>
            <a href="/">
              <p>Log Out</p>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="main-panel" id="main-panel">
        <div class="logo-main">
            AcadE
            <div class="tagline">
                acadamic evaluation from anywhere!
            </div>
            </div>
            <div class="container">
                <div class="head">
        
                    <%=t%>
                </div>
                <ul> 
                    <%aitems.pop()%>
                    <% for(var i=0;i<aitems.length;i++) { %>
                        <ul>
                            <div class="question">
                                <li><h2><%i%></h2><h2><%=aitems[i].q%></h2></li>
                            </div>
                            <div class="option">
                                
                                <li><h3>1] &nbsp<%=aitems[i].opt1%></h3></li>
                            </div>
                            <div class="option">
        
                                <li><h3> 2]&nbsp<%=aitems[i].opt2%></h3></li>
                            </div>
                            <div class="option">
        
                                <li><h3> 3] &nbsp<%=aitems[i].opt3%></h3></li>
                            </div>
                            <div class="option">
        
                                <li><h3>4] &nbsp<%=aitems[i].opt4%></h3></li>
                            </div>
                            
                            
                            <div class="answer">
                                <h6>correct answer:-</h6>
                                <li><h3> &nbsp<%=aitems[i].ans%></h3></li>
                            </div>
                        </ul>
                        <% } %>
                    </ul>
                </div>
                <div class="inputt">
        
                  <form action=<%= "/list"+link %>  method="POST">
                    <br>
                    <input type="text"  name="question" placeholder="type question"  style="height:50px;size:70px;" size="70px"><br>
                    <br>
                    <input type="text" name="op1" placeholder="option 1"><br>
                    <br>
                    <input type="text" name="op2" placeholder="option 2"><br>
                    <br>
                    <input type="text" name="op3" placeholder="option 3"><br>
                    <br>
                    <input type="text" name="op4" placeholder="option 4"><br>
                    <br>
                    <input type="number" name="correctans" placeholder="coreect answer in number"><br>
                    <br>
                    
                    
                    <button type="submit" class="button"> add question</button>
                    
                    
                  </form>  
                  
                  <form action=<%= "/aftercreate"+link %>  method="POST">
                    <button type="submit" class="button"> submit</button>
                    
                  </form>
                  
                </div>
    </div>
